@model Act4Disneypixar.Models.Pelicula
@{
    Layout = "_Layout";
}

<div id="principalVer">

    <div class="container">
        <img class="image1" src="~/images/banners/@(Model.Id)_b.jpg">
        <div class="overlay">
            <img class="image2" src="~/images/banners/@(Model.Id)_b.png">
        </div>

    </div>

    <div class="datosPelicula">
        <h1>@Model.Nombre</h1>
        <h2>@Model.NombreOriginal • @Model.FechaEstreno.Value.ToString("dd MMM yyyy")</h2>
        <p>@Model.Descripción </p>


        <div class="personajes">
            <h2>Personajes</h2>

            @foreach (var p in Model.Apariciones){
                <div>
                    <a><img src="~/images/personajes/@(p.IdPersonaje).jpg" alt="@p.IdPersonajeNavigation.Nombre"></a>
                    <div class="nombrePelicula">
                            <p>@p.IdPersonajeNavigation.Nombre</p>
                     </div>
                </div>
             }
            

        </div>
    </div>
</div>

