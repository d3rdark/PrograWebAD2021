@model IEnumerable<Act5SweetBakery.Models.Categoria>
@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}



@foreach (var c in Model)
{
    <section class="TipoP">

        <h2>@c.Nombre</h2>
        @foreach (var p in c.Productos)
        {
            <div class="foto">
                <img src="imagenes/productos/@(p.Id).png" />
                <div class="info">
                <h5>@p.Nombre</h5>
                <p>@p.Descripcion</p>
                </div>
             </div>

        }
    </section>

}

